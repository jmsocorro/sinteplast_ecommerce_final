<link rel="stylesheet" href="/css/usersStyles.css" />
<h2>Registro de nuevo Usuario</h2>
<div class="user register" action>
  {{#if message}}
    <div class="{{message.type}}">
      <div class="title">{{message.title}}</div>
      <div class="text">{{message.text}}</div>
    </div>
  {{/if}}
  <form method="post" action="/registeradmin">
    <label for="first_name">Nombre</label>
    <input
      name="first_name"
      type="text"
      required
      pattern="^[A-Z][a-z]+( [A-Z][a-z]+)*$"
    />
    <div class="invalid" title="Formato: Mmmmm Mmmmm"></div>
    <label for="last_name">Apellido</label>
    <input
      name="last_name"
      type="text"
      required
      pattern="^[A-Z][a-z]+( [A-Z][a-z]+)*$"
      title="Formato: Mmmmm Mmmmm"
    />
    <div class="invalid" title="Formato: Mmmmm Mmmmm"></div>
    <label for="email">Correo electrónico</label>
    <input name="email" type="email" required />
    <div class="invalid" title="Correo electrónico es obligatório"></div>
    <label for="age">Edad</label>
    <input
      name="age"
      type="number"
      required
      title="Debe ser un numero entero mayor que 0"
    />
    <div class="invalid" title="Debe ser un numero entero mayor que 0"></div>
    <label for="password">Contraseña</label>
    <input
      name="password"
      type="password"
      required
      pattern="^(?=.*[A-Z])(?=.*[a-z])(?=.*\d)(?=.*[_*-+.,;:@$!%*?&¿¡#·])[A-Za-z\d_*-+.,;:@$!%*?&¿¡#·]{8,}$"
      title="Debe tener al menos 8 caracteres, al menos una mayúscula, una minúscula, un número y uno de estos caracteres especiales: _*-+.,;:@$!%*?&¿¡#·"
    />
    <div
      class="invalid"
      title="Debe tener al menos 8 caracteres, al menos una mayúscula, una minúscula, un número y uno de estos caracteres especiales: _*-+.,;:@$!%*?&¿¡#·"
    ></div>
    <label for="first_name">Rol</label>
    <select name="role">
      <option value="user" selected>Basico</option>
      <option value="premium">Premium</option>
      <option value="admin">Administrador</option>
    </select>
    <input type="submit" name="" id="" value="Enviar" />
  </form>
  <div class="login">
    <a href="/">Volver</a>
  </div>
</div>