<link rel="stylesheet" href="/css/cartsStyles.css" />
<h2>Carro</h2>
<div class="cart detail">
  {{#if message}}
    <div class="{{message.type}}">
      <div class="title">{{message.title}}</div>
      <div class="text">{{message.text}}</div>
    </div>
  {{/if}}
  <a href="/products/" class="verproducto">Volver</a>
  <a href="/carts/{{_id}}/purchase" class="verproducto">Finalizar compra</a>

  {{#each products}}
    <div class="product">
      <h3>{{this.product.title}}</h3>
      <div class="details">
        <img
          src="https://sinteplastconstruccion.com.ar/assets/img/sinteplastconstruccion.com.ar/photos/w300/{{this.product.thumbnails}}"
          alt="foto producto"
          width="100"
        />
        <div class="info">
          <h4>{{this.product.description}}</h4>
          <p>Precio: ${{this.product.price}}</p>
          <p>Cantidad: {{this.quantity}}</p>
          <p>CÃ³digo: {{this.product.code}}</p>
          <a href="/products/{{this.product._id}}" class="verproducto">Ver
            Producto</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>